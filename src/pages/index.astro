    <style is:global>
      :root {
        --bg1: #0a0e2a;
        --bg2: #1a0a2d;
        --overlay: rgba(0, 0, 0, 0.6);
        --font: 'Helvetica Neue', sans-serif;
        --fg: #ffffff;
        --accent: #00ff99;
        --highlightText: #0033cc;
      }

      * { box-sizing: border-box; }

      html, body {
        margin: 0;
        padding: 0;
        height: 100%;
        font-family: var(--font);
        color: var(--fg);
        background: linear-gradient(to bottom right, var(--bg1), var(--bg2));
        overflow: hidden;
        position: relative;
      }

      body::after {
        content: "";
        background-color: var(--overlay);
        position: fixed;
        top: 0; left: 0;
        width: 100%; height: 100%;
        z-index: 0;
      }

      main {
        position: relative;
        z-index: 2;
        display: grid;
        grid-template-columns: 0.8fr 2.35fr 0.85fr;
        grid-template-rows: auto auto 1fr auto auto;
        grid-template-areas:
          "header header menu"
          "highlight highlight highlight"
          "ladder news calendar"
          ". tagline ."
          "footer footer footer";
        height: 100vh;
        padding: 2rem;
        gap: 1.2rem;
      }

      header {
        grid-area: header;
        display: flex;
        align-items: flex-end;
        justify-content: flex-start;
        gap: 1.5rem;
        z-index: 5;
        margin-bottom: 0;
        padding-bottom: 0.25rem;
      }

      .menu {
        grid-area: menu;
        text-align: right;
        align-self: start;
        font-size: 1rem;
        opacity: 0.8;
        padding-top: 1rem;
      }

      .menu nav a {
        margin-left: 1.5rem;
        text-decoration: none;
        color: var(--fg);
      }

      .menu nav a:hover {
        color: var(--accent);
      }

      .icon {
        height: 115px;
        width: auto;
      }

      .logo {
        height: 105px;
        width: auto;
        margin-bottom: 0;
      }

      .sideline-logo {
        height: 90px;    /* üîΩ Adjust this for scaling */
        width: auto;
        margin-left: 0.5rem;
        margin-bottom: 0.2rem;
      }

      .menu-icon {
        height: 40px;
        width: auto;
        margin-top: 2.5rem;
        margin-left: 0.2rem;
        margin-right: 0.2rem;
        opacity: 0.75;
        transition: transform 0.2s ease;
      }

      .menu-icon:hover {
        transform: scale(1.2);
        opacity: 1;
      }

      .highlight-strip {
        grid-area: highlight;
        background: linear-gradient(to right,
          rgba(0, 255, 153, 0) 0%,
          #2FFD01 25%,
          #2FFD01 75%,
          rgba(0, 255, 153, 0) 100%);
        padding: 0.25rem 0.5rem;
        text-align: center;
        font-size: 1.2rem;
        font-weight: normal;
        color: #0E0D20;
        border-radius: 8px;
      }

      .panel {
        border: 1px solid rgba(255,255,255,0.2);
        border-radius: 12px;
        padding: 1rem;
        background: rgba(0,0,0,0.4);
        backdrop-filter: blur(4px);
        box-shadow: 0 0 10px rgba(0,0,0,0.3);
      }

      .referee-window {
        background: linear-gradient(to bottom, #101f3c 0%, #2a0c0c 100%);
        border: 2px solid #2FFD01;
        border-radius: 14px;
        box-shadow: 0 0 25px rgba(0, 255, 153, 0.4);
        padding: 1rem 1.5rem;
        flex-grow: 1;
        min-height: 0;
        display: flex;
        flex-direction: column;
        justify-content: flex-start;
        position: relative;
        max-height: none;
        overflow: hidden;
      }

      .referee-caption {
        height: 50px;        /* ‚¨ÖÔ∏è or adjust as needed */
        width: auto;
        margin-bottom: 0.6rem;
      }

      .ladder-table {
        overflow-y: auto;
        flex-grow: 1;
        padding-right: 4px;
      }

      .ref-icon {
        height: 38px;
        width: 38px;
        border-radius: 50%;
        object-fit: cover;
        flex-shrink: 0;
        margin-left: 0.1rem;
        margin-right: 0.5rem;
      }

      .ref-rank {
        font-weight: medium;
        text-align: right;
        color: #ffffff;
        margin-right: 0.5rem;
        flex-shrink: 0;
      }

      .ref-name {
        flex: 1;
        font-weight: medium;
        color: #ffffff;
        margin-right: 0.75rem;
      }

      .flag-icon {
        height: 12px;
        width: auto;
        margin-right: 1rem;
        flex-shrink: 0;
      }

      .ref-score {
        font-weight: medium;
        color: #2FFD01;
        margin-right: 0.1rem;
      }

      .ladder-row {
        display: flex;
        align-items: center;
        justify-content: space-between;
        padding: 0.10rem 0;
        border-bottom: 1px solid rgba(255, 255, 255, 0.1);
      }

      .info-icon {
        position: absolute;
        bottom: 0.5rem;
        left: 1.75rem;
        height: 28px;
        width: auto;
        opacity: 1;
        cursor: pointer;
      }

      .more-link {
        position: absolute;
        bottom: 1rem;
        right: 3rem;
        font-size: 0.85rem;
        color: white;
        opacity: 0.85;
      }

      .ladder-scaler {
        height: 100%;
        display: flex;
        justify-content: center;
        align-items: flex-start;
        overflow: hidden;
        position: relative;
      }

      .ladder-content {
        transform-origin: top left;
        transform: scale(0.95);
      }

      @media (max-height: 900px) {
        .ladder-content { transform: scale(0.95); }
      }

      @media (max-height: 800px) {
        .ladder-content { transform: scale(0.9); }
      }

      @media (max-height: 700px) {
        .ladder-content { transform: scale(0.85); }
      }

      #ladder { grid-area: ladder; }
      #news { grid-area: news; }
      #calendar { grid-area: calendar; }

      .tagline {
        grid-area: tagline;
        text-align: center;
        font-size: 1.2rem;
        opacity: 0.95;
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 0.5rem;
